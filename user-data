#cloud-config

manage_etc_hosts: localhost

ssh_authorized_keys:
- ssh-rsa  vagrant insecure public key

bootcmd:
- "ln -snf /run/resolvconf/resolv.conf /etc/resolv.conf"

groups:
- "sudo"
- "users"

users:
- name: "vtse"
  gecos: "Vince Tse"
  primary-group: "users"
  groups:
  - "sudo"
  shell: "/bin/bash"
  ssh-import-id: "gh:vincetse"

write_files:
- path: "/etc/sudoers.d/sudo"
  permissions: "0600"
  content: |
    %sudo ALL=(ALL) NOPASSWD: ALL
