[Unit]
Description=Stellar container runtime service
Documentation=https://github.com/ehazlett/stellar
After=network.target containerd.service

[Service]
User=root
Group=root
WorkingDirectory=/
Restart=always
ExecStart=/usr/local/bin/stellar -D server --config /usr/local/etc/stellar.conf

[Install]
WantedBy=multi-user.target
